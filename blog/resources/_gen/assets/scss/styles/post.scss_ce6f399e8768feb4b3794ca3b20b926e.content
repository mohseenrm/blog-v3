/* http://meyerweb.com/eric/tools/css/reset/ 
   v2.0 | 20110126
   License: none (public domain)
*/
html,
body,
div,
span,
applet,
object,
iframe,
h1,
h2,
h3,
h4,
h5,
h6,
p,
blockquote,
pre,
a,
abbr,
acronym,
address,
big,
cite,
code,
del,
dfn,
em,
img,
ins,
kbd,
q,
s,
samp,
small,
strike,
strong,
sub,
sup,
tt,
var,
b,
u,
i,
center,
dl,
dt,
dd,
ol,
ul,
li,
fieldset,
form,
label,
legend,
table,
caption,
tbody,
tfoot,
thead,
tr,
th,
td,
article,
aside,
canvas,
details,
embed,
figure,
figcaption,
footer,
header,
hgroup,
menu,
nav,
output,
ruby,
section,
summary,
time,
mark,
audio,
video {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline; }

/* HTML5 display-role reset for older browsers */
article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
menu,
nav,
section {
  display: block; }

body {
  line-height: 1; }

ol,
ul {
  list-style: none; }

blockquote,
q {
  quotes: none; }

blockquote:before, blockquote:after {
  content: "";
  content: none; }

q:before, q:after {
  content: "";
  content: none; }

table {
  border-collapse: collapse;
  border-spacing: 0; }

html, body {
  width: 100%; }

.nav-bar {
  display: flex;
  justify-content: center;
  align-items: center; }

.content {
  display: flex;
  flex-direction: column;
  /* also update the right margin of logo to make it look even */
  padding: 0% 3% 3% 3%;
  height: 100%; }

body {
  font-size: 14px;
  line-height: 1.5; }

h1, h2, h3, h4, h5, h6 {
  font-family: 'Playfair Display', serif; }

h1 {
  font-size: 3rem;
  font-weight: 700;
  font-style: italic; }

div, p, span {
  font-family: 'Source Sans Pro', sans-serif;
  font-size: 1rem; }

.link {
  color: black;
  font-size: 2rem;
  font-weight: 700;
  letter-spacing: 1px;
  text-decoration: none;
  background-image: -webkit-linear-gradient(to right, #ff9966, #ff5e62);
  background-image: linear-gradient(to right, #ff9966, #ff5e62);
  background-repeat: no-repeat;
  background-size: 100% 0.2em;
  background-position: 0 80%;
  transition: background-size 0.25s ease-in, color 0.25s ease-in, font-weight 0.25s ease-in; }
  .link:hover {
    color: white;
    background-size: 100% 88%;
    font-weight: 100; }

.logo {
  display: flex;
  justify-content: flex-end;
  /* right margin depends on padding of div#content container */
  position: fixed;
  top: 0;
  right: 3%; }

svg text#mm {
  stroke-dasharray: 800;
  animation: fill_logo 3s cubic-bezier(0.11, 0.5, 0.83, 0.67);
  opacity: 1; }

svg rect#border {
  stroke-dasharray: 800;
  stroke-linejoin: round;
  stroke-linecap: round;
  stroke-width: 15;
  animation: fill_border 3s cubic-bezier(0.11, 0.5, 0.83, 0.67);
  opacity: 1; }

@keyframes fill_logo {
  0% {
    opacity: 0;
    fill: none;
    stroke-dashoffset: 800; }
  30% {
    opacity: 1; }
  90% {
    fill: rgba(0, 0, 0, 0); }
  100% {
    fill: black;
    stroke-dashoffset: 0; } }

@keyframes fill_border {
  0% {
    opacity: 0;
    stroke-dashoffset: 800;
    stroke-width: 1; }
  30% {
    opacity: 1;
    stroke-width: 1; }
  85% {
    stroke-width: 2; }
  100% {
    stroke-dashoffset: 0;
    stroke-width: 2; } }

.banner_image {
  width: 100%;
  background-size: cover; }

.nav-bar {
  position: sticky;
  top: 0;
  background: white; }

